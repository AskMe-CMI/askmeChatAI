# ===============================
# RMUTL ChatAI Example .env File
# Copy this file to .env or .env.local and fill in your real values.
# Do NOT commit your real .env to version control!
# ===============================

NEXT_PUBLIC_BACKEND_API_URL=   # Base URL for backend API (mock or real)
NEXT_PUBLIC_BASE_URL=          # Base URL for frontend (e.g. http://localhost:3000)
NEXT_PUBLIC_ALLOW_LOCAL_LOGIN= # TRUE to allow local login (for dev/testing)

# Microsoft OAuth (MSAL - Legacy, for old login)
NEXT_PUBLIC_MSAL_TENANT_ID=    # Azure AD Tenant ID (legacy)
NEXT_PUBLIC_MSAL_CLIENT_ID=    # Azure AD Client ID (legacy)

# Microsoft OIDC (AI-Demo App AskMe, for production or staging)
# OIDC_CLIENT_ID=               # Azure AD OIDC Client ID (AskMe)
# OIDC_TENANT_ID=               # Azure AD OIDC Tenant ID (AskMe)
# OIDC_CLIENT_SECRET=           # Azure AD OIDC Client Secret (AskMe)
# OIDC_CALLBACK_URL=            # OIDC Redirect URI (AskMe)

# Microsoft OIDC (AI-Demo App Local, for local development)
OIDC_CLIENT_ID=                # Azure AD OIDC Client ID (local)
OIDC_TENANT_ID=                # Azure AD OIDC Tenant ID (local)
OIDC_CLIENT_SECRET=            # Azure AD OIDC Client Secret (local)
OIDC_CALLBACK_URL=             # OIDC Redirect URI (local)

# Microsoft OIDC (AI-Demo App Production, for real production)
# OIDC_CLIENT_ID=               # Azure AD OIDC Client ID (prod)
# OIDC_TENANT_ID=               # Azure AD OIDC Tenant ID (prod)
# OIDC_CLIENT_SECRET=           # Azure AD OIDC Client Secret (prod)
# OIDC_CALLBACK_URL=            # OIDC Redirect URI (prod)

# Redis (optional, for resumable streams)
# REDIS_URL=                    # Redis connection string (leave blank for dev)

# Dify AI Integration
DIFY_APP_ID=                   # Dify App ID (starts with app-)
DIFY_API_KEY=                  # Dify API Key
DIFY_BASE_URL=                 # Dify API Base URL (e.g. https://ai.rmutl.ac.th/v1)
# DIFY_BASE_URL=                # Alternative Dify API Base URL

# Debug
DEBUG_DIFY=                    # TRUE to enable Dify debug logs

# Node/Next.js Environment
NODE_ENV=                      # development or production